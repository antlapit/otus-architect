    {
      "endpoint": "/health",
      "extra_config": {
        "github.com/devopsfaith/krakend/proxy": {
          "static": {
            "data": {
              "status": "OK"
            },
            "strategy": "always"
          }
        }
      },
      "backend": [
        {
          "url_pattern": "/",
          "host": [
            "http://fake-backend"
          ]
        }
      ]
    },
    {
      "endpoint": "/login",
      "method": "POST",
      "headers_to_pass": [
        "*"
      ],
      "output_encoding": "no-op",
      "backend": [
        {
          "host": [
            "http://auth-service:8001"
          ],
          "encoding": "no-op",
          "url_pattern": "/login"
        }
      ]
    },
