      "endpoint": "/me/profile",
      "method": "GET",
      "output_encoding": "json",
      "headers_to_pass": [
        "*"
      ],
      "backend": [
        {
          "host": [
            "http://user-profile-service:8000"
          ],
          "encoding": "json",
          "url_pattern": "/profiles/by-user-id/{JWT.sub}",
          "allow": [
            "profileId",
            "firstName",
            "lastName",
            "email",
            "phone"
          ]
        },
        {
          "host": [
            "http://billing-service:8002"
          ],
          "encoding": "json",
          "url_pattern": "/accounts/by-user-id/{JWT.sub}",
          "allow": [
            "accountId",
            "money"
          ]
        },
        {
          "host": [
            "http://auth-service:8001"
          ],
          "encoding": "json",
          "url_pattern": "/me"
        }
      ],
      "extra_config": {
        "github.com/devopsfaith/krakend-jose/validator": {
          "alg": "RS256",
          "jwk-url": "http://auth-service:8001/jwk",
          "disable_jwk_security": true,
          "key_identify_strategy": "kid",
          "audience": [
            "http://arch.homework"
          ],
          "issuer": "http://arch.homework",
          "roles": ["USER"],
          "roles_key": "auth_role"
        }
      }
    },
